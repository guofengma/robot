/* pages/choose/index.wxss */
.input-box{
	background-color: #fff;
	margin: 0 auto;
	padding: 20rpx 0;
	border-radius: 10rpx;
	width: 90%;
}
.input-box input{
	width: 100%;
	height: 100%;
	text-align: center;
}
.addbox{
  width: 100%;
  margin: 0 auto;
  position: static;
  float: left;
  background: #fff;
  padding-bottom: 3%;
  margin-bottom: .5rem; 
  border-bottom: #dadada solid 1px;
}
.addbox2{
   padding-bottom: 1%; 
}
.addbox .title{
  background: #fff;
  border-top: #dadada solid 1px;
}
.addbox .title span{
  color: #3c89ef;
  font-weight: bolder;
  font-size: 1rem;
}
.addbox .title span.tishi{
  font-size: .7rem;
  color: #666;
  font-weight: normal;
  padding-left: .5rem
}
.flex-wrp{
  width: 100%;
  margin: 0 auto;
}
.flex-wrp image{
  width: 55%;
  height: 5vh;
  margin-top: .5vh  
}
.flex-item{
  width: 25%;
  border-radius: 20rpx;
  float: left;
  text-align: center;
  margin: 1%; 
  background: #fff;
  padding: 1% 0 2% 0;  
  border: #ccc solid 2px;
}
.on{
  background:#b9dd08;
  }
.off{
  background:#fff;
  }
.flex-item b{
  color: #333
}
.flex-item span{
  font-size: .6rem;
  color: #666;
}
.flex-item span b{
  font-size: 1rem;
} 
.flex-item p{
  width: 100%;
  float: left;
  line-height: 1;
  padding: 0;
  margin-bottom: 6%;
  font-size: .9rem;
  color: #666;
}
.flex-item p b{
  font-size: .8rem;
}
.cur{
  background:#fff; 
  /*box-shadow: inset 0 0 0 2px #3c89ef;*/
  border: #3c89ef solid 2px;
}
.cur .src1{
  display: none
}
.cur .src1s{
  display: inline-block
}
.cur p,
.cur b{
  color: #3c89ef
}
.cur2{
  background:none;  
}
.cur2 .src1{
  display: inline-block
}
.cur2 .src1s{
  display: none
}
.paystyle{
  width:90%;
  margin: 0 auto;
  font-size: .8rem;
  position: relative;
  background: #fff
}
.paystyle .qian{  
  position: absolute;
  float: right;
  margin-right: 10rpx;
  right: 0
}
.paystyle .qian b em{
  font-size: 1rem
}
.paystyle .charge{
  color: #3c89ef;
  font-size: 1rem;
  padding-left: .5rem
}
.radio-group label{
  width: 98%;
  float: left;
  margin-bottom: 20rpx;
  margin-left: 2%;
  font-size: 1rem
}
 .box-sizing{
  display: inline;
  white-space: nowrap;
  overflow-x:scroll;
  overflow-y:hidden;
}
.box-sizing .flex-wrp{
  width: 3.8rem;
  display:inline-block;
  padding-left:6.5%;
}
.box-sizing .flex-wrp .flex-item{
  width: 100%;
}
.picker{
  position: relative;
  width: 90%;
  height: 1.5rem;
  text-indent: 10rpx;
  font-size: .8rem;
  margin-left: 40rpx;
  color: #3c89ef;
  margin-top: 5%;
  display: inline-block  
}
.picker span{
  float:left;
  font-size: 32rpx;
}
.picker .picspan{
  	font-size: 32rpx;
}
.picker .picspan em{
  color: #000
}
.picker image{
  position: absolute;
  top:-20%;
  right: 0;
  width: 2rem;
  height: 2rem;
}
.addbox .nodazhe abbr{
  padding-left: .5rem;
  text-decoration: line-through;
  color: #ccc
}
.addbox .nodazhe abbr span{
  color: #ccc;
  font-weight: normal;
}
.addbox .dazhe abbr{
  text-decoration:none;
}
.addbox .dazhe em{
  display: none;
}
radio .wx-radio-input{
    display: none; 
}
.radioimg{
   width: 40rpx;
   height: 40rpx;
   vertical-align: middle;
   margin-right: 10rpx;
}
.btn-charge{
  border-radius: 50rpx;
  box-shadow:0 10px 10px #96bef6;
}
.btn-charge[disabled]{
  background: #ccc;
}
