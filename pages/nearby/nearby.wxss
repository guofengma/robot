/* pages/nearby/nearby.wxss */
view{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
.nearby-wrapper{
    /* width: 700rpx; */
    min-height: 100%;
    margin: auto;
    /* padding-top: 30rpx; */
}
.header{
    /* height: 60rpx; */
    padding-left: 25rpx;
    line-height: 120rpx;
    background: #F2F2F2;
}
.mark{
    display: inline-block;
    font-size: 35rpx;
    font-weight: 500;
    /* margin-bottom: 60rpx; */
}
.item-info{
    display: flex;
    width: 700rpx;
    height: 170rpx;
    margin: 0 auto;
    padding: 5rpx 0;
    border-bottom: 1rpx solid #ccc;
}
.featuers{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-around
}
.destination{
    flex: 0 0 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
._title{
    display: inline-block;
    font-size: 30rpx;
    font-weight: 600;
    color: #333;
}
.address{
    font-size: 24rpx;
    color: #808080;
}
.detail_wrapper{
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #808080;
}
.line{
    display: inline-block;
    margin: 0 15rpx;
}
.total{
    padding: 5rpx 8rpx;
    color:#fff;
    border-radius: 4rpx;
    min-width: 190rpx;
    text-align: center;
}
.normal{
    background-color: #40e399;
}
.warn{
    background-color:#ff6695; 
}
.destination text{
    font-size: 24rpx;
    color: #808080;
}
.destination view{
    text-align: center;
}
._icon{
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 50%;
    background-color: #4e8ae5;
}
.icon-daozhequ::before{
    content: '\e606';
    font-size: 50rpx;
    color:#fff;
}
.nodata{
  margin-top: 10vh;
  width: 100%;
  text-align: center
}
.nodata image{
  width: 20%;
  height: 11vh;
}
.nodata p{
  width:100%;
  float: left;
  font-size: .8rem;
}
.distance{
    display: inline-block;
    min-width: 30rpx;
}
