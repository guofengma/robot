/* pages/nearby/nearby.wxss */
view{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
.nearby-wrapper{
    width: 700rpx;
    margin: auto;
    padding-top: 30rpx;
}
.mark{
    display: inline-block;
    font-size: 40rpx;
    font-weight: 500;
    margin-bottom: 60rpx;
}
.item-info{
    display: flex;
    width: 100%;
    height: 186rpx;
    border-bottom: 1rpx solid #ccc;
}
.featuers{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-around
}
.destination{
    flex: 0 0 100rpx;
    
}
._title{
    display: inline-block;
    font-size: 30rpx;
    font-weight: 600;
    color: #333;
}
.address{
    font-size: 24rpx;
    color: #808080;
}
.detail_wrapper{
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #808080;
}
.line{
    display: inline-block;
    margin: 0 15rpx;
}
.total{
    padding: 5rpx 8rpx;
    color:#fff;
    border-radius: 4rpx;
    background-color: #40e399;
}
