/**index.wxss**/
.container{
  position: relative;
  width: 100%;
  height: 100vh;
}
#myMap{
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}
.listbox{
  top:3vh;
  width: 90%;
  margin: 0 5%;
  padding: 0;
  height: auto;
  position: absolute;
  float: left;
  background: #fff;
  border-radius: 10px;
  pointer-events: none
}
.list{  
  position: relative;
  float: left;
  width: 100%;  
  margin: 0 auto;
  padding: 0;
  font-size: 1.2rem;
}
.list .left{
  padding: 3% 5% 3% 5%;
  width: 65%;
}
.list .left:active{
  background: #eeeeee;  
  border-radius: 10px;
}
.list .name{
  width: 100%;
  overflow: hidden;
  white-space:nowrap;
  word-break:keep-all;
  text-overflow:ellipsis;
}
.list .address{
  font-size: .7rem;
  color: #666;
  width: 100%;
  white-space:normal;
  word-break:word-break;
  text-overflow:ellipsis;
}
.list .enable{
  margin-top: .5rem;
  width: auto;
  font-size: .8rem;
  color: #3c89ef;
}
.list .longline{  
  position: absolute;
  top:0;
  left: 74%;
  width: 1px;
  height: 100%;
  background-color: #eeeeee
}
.list .leader{
  padding: 0;
  float: right;
  width: 26%;
  height: 100%;
  vertical-align: middle;
  position: absolute;
  top:0;
  right: 0;
  text-align: center;  
}
.list .leader:active{
  background-color: #eeeeee;
  border-radius: 10px;
}
.list .leader cover-image{
  width: 36%;
  margin: 5% 32% 0 32%;
  height: 52%;
  position: relative;
  float: left;
}
.list .leader .distance{
  position: relative;
  float: left;
  width: 100%;
  font-size: .8rem;
  text-align: center
}
