/* pages/charge/index.wxss */
.input-box{
	background-color: #fff;
	margin: 0 auto;
	padding: 20rpx 0;
	border-radius: 10rpx;
	width: 90%;
}
.input-box input{
	width: 100%;
	height: 100%;
	text-align: center;
}
.addbox{
  width: 100%;
  margin: 0 auto;
  position: relative;
  float: left
}
.flex-wrp{
  width: 94%;
  margin: 0 auto;
}
.flex-item{
  width: 29%;
  height: 2.2rem;
  border-radius: 10rpx;
  float: left;
  text-align: center;
  margin: 0 2% 4% 2%;
  background: #fff;
  padding: 3% 0 2% 0;
}
.flex-item b{
  color: #666;
  font-weight: bolder
}
.flex-item span{
  font-size: .8rem;
  color: #666;
}
.flex-item p{
  width: 100%;
  float: left;
  font-size: .6rem;
  color:#3c89ef;
}
.cur{
  background-color: #3c89ef;
  color: #fff;
}
.cur b,
.cur span,
.cur p{
   color: #fff;
}
.paystyle{
  width:90%;
  margin: 0 auto;
  font-size: .8rem
}
.tishi{
  width: 100%;
  height: 10vh;
  position: relative;
  float: left;
  text-align: center;
  font-size: .8rem
}
.tishi text span{
  color: #999;
}
.btn-login{
  margin: 0 auto;
  width: 90%;
	background-color: #3c89ef;
	bottom: 60rpx;
  border-radius: 50px;
  box-shadow:0 10px 10px #ccc;  
  color: #fff;
}