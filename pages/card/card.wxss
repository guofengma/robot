/* pages/card/card.wxss */
.listbox{
  width: 90%;
  margin: 0 auto;
  padding-top: 1.2rem;
}
.listbox .list{
  width: 100%;
  height: 6rem;
  background-color: #fff;
  margin: 0 auto;
  margin-top: -1rem;
  position: relative;
  padding: 4% 0;
  font-size: 1rem;
  border-radius: 10px;
  box-shadow:0 -5px 5px #ccc;
  border:#ccc solid 1px;
}
.listbox .list .images1{
  width: 3rem;
  height: 3rem;
  margin-left: 5%;
  margin-bottom: .5rem
}
.listbox .list .images2{
  position: absolute;
  width: 8rem;
  height: 4.5rem;
  right: 0;
  bottom:0;
}
.listbox .list .number{
  padding: 0 5%;
  width: 80%;
  overflow: hidden;
  white-space:nowrap;
  word-break:keep-all;
  text-overflow:ellipsis;
}
.listbox .list .number small{
  font-size: .6rem
}
.listbox .list .list-btn{
  padding: 0 0%;
  float: left;
  width: 20%;
  height: 100%;
  vertical-align: middle;
  position: absolute;
  bottom:0;
  right: 0;
  text-align: center;
}
.listbox .list .list-btn span{
    width: 50%;
    margin-top: 30rpx;
    margin-right: 30rpx;
  	background-color: #fff;
    border: #3c89ef solid 1px;
    color: #3c89ef;
    font-size: .8rem;
    border-radius: 3px;
    padding: 4% 10%;
    float: right
}
.input-box{
	background-color: #fff;
	margin: 0 auto;
  margin-bottom: 16rpx;
	padding: 30rpx 0;
	border-radius: 2rpx;
	width: 90%;
  position: relative;
}
.input-box input{
  position: relative;
	width: 100%;
	height: 100%;
	text-align: center;
  z-index: 1;
}
.input-box .saoma{
  top:0;
  width: 110rpx;
  height: 110rpx;
  position: absolute;
  left:0;
  float: left;
  z-index: 3
}
.input-box .saoma image{
  width: 100%;
  height:100%;
}
.nodata{
  margin-top: 10vh;
  width: 100%;
  text-align: center
}
.nodata image{
  width: 20%;
  height: 11vh;
}
.nodata p{
  width:100%;
  float: left;
  font-size: .8rem;
}
.tishi{
  padding: 0 50rpx;
  margin-bottom: 5vh;
  text-align: left;
  font-size: .8rem;
  color: #3c89ef
}
/* 手动输入绑定卡号哦 */
.addCard{
    width: 90%;
    margin: 30rpx auto;
    box-sizing: border-box;
    display: flex;
    padding: 30rpx 0 30rpx 50rpx;
    align-items: center;
    background-color:#fff;
}
.addCard text{
    font-size: 32rpx;
    color: #ccc;
}
.addCard input{
    padding-left: 10rpx;
    margin-left: 15rpx;
    font-size: 28rpx;
    display: inline-block
}
.addCard .form{
    display: flex;
    flex: 1;
    justify-content: space-between;
    align-items: center;
}

