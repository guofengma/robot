/* pages/list/list.wxss */
.container{
	background-color: #fff;
	height: 100%;
}
.listbox{
  width: 88%;
  margin: 0 auto;
}
.listbox .list{
  width: 100%;
  background: #fff;
  margin: 0 auto;
  position: relative;
  padding: 2% 0;
  font-size: 1rem;
  border-bottom: #eee solid 1px;
}
.listbox .list:active{
  background: #eee
}
.listbox .list .left{
  padding: 0 2% 0 1%;
  width: 75%;
}
.listbox .list .name{
  width: 100%;  
  overflow: hidden;
  white-space:nowrap;
  word-break:keep-all;
  text-overflow:ellipsis;
}
.listbox .list .address{
  width: 100%; 
  font-size: .8rem;
  color: #666;
  white-space:normal;
  word-break:word-break;
  text-overflow:ellipsis;
}
.listbox .list .enable{
  width: auto;
  font-size: .8rem;
  color: #3c89ef;
}
.listbox .list .leader{
  padding: 0 0%;
  float: left;
  width: 25%;
  height: 100%;
  vertical-align: middle;
  position: absolute;
  top:0;
  right: 0;
  text-align: center;
}
.listbox .list .leader image{
  width: 40%;
  margin: 0 30% 0 30%;
  height: 55%;
  position: relative;
  float: left;
}
.listbox .list .leader span{
  position: relative;
  float: left;
  width: 100%;
  font-size: .8rem;
  text-align: center
}
.nodata{
  margin-top: 10vh;
  width: 100%;
  text-align: center
}
.nodata image{
  width: 20%;
  height: 11vh;
}
.nodata p{
  width:100%;
  float: left;
  font-size: .8rem;
}
.on{
  display: block
  }
.off{
  display: none
  }