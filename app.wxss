/**app.wxss**/
.container{
	background-color: #f2f2f2;
	height: 100vh;
}
.title{
	background-color: #f2f2f2;
	padding: 30rpx 0 30rpx 50rpx;
	font-size: 32rpx;
	color: #000;   
  overflow: hidden;
  white-space:nowrap;
  word-break:keep-all;
  text-overflow:ellipsis;
}
.tapbar{
	display: flex;
	align-items: center;
	justify-content: space-between;
	background-color: #fff;
	padding: 40rpx;
}
.btn-charge{
	width: 90%;
	background-color: #3c89ef;
	margin: 40rpx auto 30rpx;
  color: #fff;
	text-align: center;
}